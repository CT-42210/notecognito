{
    "name": "notecognito-config",
    "version": "0.1.0",
    "description": "Configuration UI for Notecognito",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never"
    },
    "keywords": ["notecard", "productivity", "electron"],
    "author": "Notecognito Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.6.4"
    },
    "dependencies": {
        "bootstrap": "^5.3.2",
        "bootstrap-icons": "^1.11.2"
    },
    "build": {
        "appId": "com.notecognito.config",
        "productName": "Notecognito Config",
        "directories": {
            "output": "dist"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "category": "Utility",
            "icon": "assets/icon.png"
        }
    }
}